<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 card form">
  <h1>Create a New Post...</h1>

  <%= simple_form_for @post do |f| %>
    <%= f.input :title %>
    <br>
    <%= f.input :body %>
    <br>
    <%= f.submit "Post it!", class: 'btn btn-success' %>
  <% end %>
</div>