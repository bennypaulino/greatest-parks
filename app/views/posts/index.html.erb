<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <% @posts.each do |post| %>
    <div class="card">    
      <h4 class="post-title text-center">
        <%= link_to post.title, post_path(post) %>
      </h4>
      <p><%= post.body %></p>
      <div class="handle">- <%= post.user.username %></div>
    </div>
  <% end %>
</div>