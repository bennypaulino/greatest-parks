<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
  <div class="card"> 
    <h2><%= @post.title%></h2>
    <p><%= @post.body %></p>
    <p class="time-stamp">Posted by <%= @post.user.username %> <%= time_ago_in_words(@post.created_at) %> ago</p>
  </div>

  <div class="comments">
    <h3>Comments</h3>
    <% @post.comments.each do |comment| %>
      <div class="comment">
        <span class="comment_handle">
          <%= comment.user.username %>
        </span>        
        <%= comment.comment_body %>
        <p class="time-stamp">Posted <%= time_ago_in_words(comment.created_at) %> ago</p>
      </div>
    <% end %>
    <h4>Add a comment</h4>
    <%= simple_form_for Comment.new, url: post_comments_path(@post) do |f| %>
      <%= f.input :comment_body %>
      <br>
      <%= f.submit 'Add Comment', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>